<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="@drawable/bg_gradient">

  <TextView
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:id="@+id/time_label"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:textColor="#ffffffff"
    android:textSize="24sp"
    tools:text="@string/time_place_holder"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/icon_image_view"
    android:layout_centerVertical="true"
    android:src="@drawable/partly_cloudy"
    android:layout_toEndOf="@id/time_label"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/temperature_label"
    android:layout_centerVertical="true"
    android:layout_alignParentEnd="true"
    android:textColor="#ffffffff"
    android:textSize="24sp"
    tools:text="100"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/summary_label"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/icon_image_view"
    android:textColor="#ffffffff"
    android:layout_toStartOf="@+id/temperature_label"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:text="Partly Cloudy "/>

</RelativeLayout>
